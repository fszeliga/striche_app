<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:divider="#FFCC00"
    android:dividerHeight="4px"
    android:clickable="true"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:layout_marginBottom="1dp"
    android:padding="5dp">

    <ImageView
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:id="@+id/imageview_listitem_users_pic"
        android:src="@drawable/ic_face_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textview_listitem_users_name"
        android:layout_alignTop="@+id/imageview_listitem_users_pic"
        android:layout_toEndOf="@+id/imageview_listitem_users_pic"
        android:textColor="@color/textColorListPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="99"
        android:id="@+id/textview_listitem_users_count"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/textColorListPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textview_listitem_users_id"
        android:layout_below="@+id/textview_listitem_users_name"
        android:layout_toEndOf="@+id/imageview_listitem_users_pic"
        android:textColor="@color/textColorListSecondary"/>
</RelativeLayout>
